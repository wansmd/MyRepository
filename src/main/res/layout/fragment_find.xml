<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeaea"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/find_news"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="发现"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8DDE1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycview_find_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8DDE1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycview_find_menu_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <RelativeLayout
                android:id="@+id/top_pk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/find_reflesh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="旅游PK"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/find_pk1"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:src="@mipmap/find_pk1" />

                <ImageView
                    android:id="@+id/find_pk2"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:src="@mipmap/find_pk2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_pk"
                android:layout_toLeftOf="@id/find_vs"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="富士山"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一座美丽壮阔的山"
                    android:textColor="#FFF"/>

                <TextView
                    android:id="@+id/per_find_pk1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36%"
                    android:textColor="#FFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_pk"
                android:layout_toRightOf="@id/find_vs"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="罗马角斗场"
                    android:textColor="#FFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史和征服的力量"
                    android:textColor="#FFF"/>

                <TextView
                    android:id="@+id/per_find_pk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64%"
                    android:textColor="#FFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/probar_find_pk1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar_pk1" />

                <ProgressBar
                    android:id="@+id/probar_find_pk2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar_pk2" />
            </LinearLayout>


            <ImageView
                android:id="@+id/find_vs"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/find_vs" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgbut_find_pk1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/hobby_red" />

            <TextView
                android:id="@+id/text1_find_pk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgbut_find_pk1"
                android:text="喜欢他TA"
                android:textColor="#ff0000" />

            <TextView
                android:id="@+id/text2_find_pk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_find_pk1"
                android:layout_toRightOf="@id/imgbut_find_pk1"
                android:text="51人喜欢"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgbut_find_pk2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/hobby_blue" />

            <TextView
                android:id="@+id/text1_find_pk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgbut_find_pk2"
                android:text="喜欢他TA"
                android:textColor="#0000ff" />

            <TextView
                android:id="@+id/text2_find_pk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_find_pk2"
                android:layout_toLeftOf="@id/imgbut_find_pk2"
                android:text="49人喜欢"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hot_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
